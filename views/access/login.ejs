<script type="text/ng-template" id="/login.html">
    <div class="page-header">
        <h1 align="center">Acceso</h1>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 control-label" for="_email">Email</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="_email" ng-model="especialista.email" required="required"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="password">Contrase&ntilde;a</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" id="password" ng-model="especialista.contrasena" required="required"/>
            </div>
        </div>
        <div class="col-sm-3 col-sm-offset-4">
            <button type="submit" class="form-control" ng-model="especialista" ng-click="access()" value="Entrar" />
        </div>
    </div>
</script>
